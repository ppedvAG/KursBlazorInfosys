@page "/kunden"
@using KursInfosys.Models
@inject NorthwindContext ctx
<div class="Container">

    <div class="row">

        <div class="col">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="suche" @bind="eingabe" @bind:event="oninput">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="bi bi-search"></i> Button
                </button>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col">


            <ul class="list-group">
                <li class="list-group-item  active">
                    Kunden
                </li>
                @foreach (var item in ctx.Customers.Where(x=>x.CompanyName.Contains(eingabe)))
                {

                    <li class='list-group-item list-group-item-action'>
                        <a href="/kunden/@item.CustomerId"> <i class="bi bi-pencil"></i></a>
                        @item.CustomerId - @item.CompanyName
                    </li>
                }

            </ul>
        </div>
    </div>

</div>
@code {
    string eingabe = string.Empty;
}
