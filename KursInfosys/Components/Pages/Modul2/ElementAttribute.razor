@page "/attr"
<h3>ElementAttribute @name</h3>
<div class="btn btn-danger" @onclick="click">danger</div>
<div class="btn btn-danger" @onclick="(_) => click2(1, _)">1 danger</div>
<input @bind="name" class="form-control" placeholder="Name" />
<br />
<input @bind="name" @bind:event="oninput" class="form-control" placeholder="Name" />
<input @ref="sepp" value="name" @oninput="(_) => name = _.Value?.ToString()" class="form-control" placeholder="Name" />
@code {
    string name = "Default Name";

    ElementReference sepp;
    void click()
    {
        Console.WriteLine("ElementAttribute clicked");
        // You can add more logic here if needed

        sepp.FocusAsync(); // Example of using ElementReference to focus an input element
    }
    void click2(int id, MouseEventArgs args)
    {
        Console.WriteLine("ElementAttribute clicked2");
        // You can add more logic here if needed
    }
}