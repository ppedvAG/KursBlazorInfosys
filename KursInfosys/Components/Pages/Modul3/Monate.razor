@page "/monate"
<h3>Monate</h3>
<div class="Container">
<div class="row">
    <div class="col-12 col-md-6">
            <h1> @DateTime.Now.AddMonths(selectedMonth).ToString("MMMM")</h1>
    </div>
    <div class="col-12 col-md-6">
        

            <ul class="list-group">
                <li class="list-group-item  active" >
                   Monate
                </li>
                @for (int i = 0; i < 12; i++)
                {
                    var m = i;
                    <li @key=m class='list-group-item list-group-item-action @(selectedMonth == m ? "list-group-item-primary":"")' 
                    @onclick="()=>SelectMonth(m)">
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                </li> 
                }
             
            </ul>
    </div>
</div>    

</div>
@code {
    int selectedMonth;

    void SelectMonth(int month)
    {
        selectedMonth = month;
      
    }

}
